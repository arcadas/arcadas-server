
# Docker

alias docls='docker container ls'
alias doclsa='docker container ls -a'
alias docstart='docker container start $1'
alias docstop='docker container stop $1'
alias docre='docker container restart $1'
alias docrm='docker container rm $1'
alias docrmf='docker rm -f $1'
alias docrmfa='docker rm -f $(docker ps -a -q)'
alias docup='docker-compose up -d'
alias docdown='docker-compose down -v'
alias doccre='docker-compose restart'
alias docbash='docker exec -it $1 /bin/bash'
alias doclog='docker logs -f $1'

alias dlnare='docker container restart minidlna'
