
f_grbd() {
	git push origin :$1
}

f_grbdf() {
	git branch -rd origin/$1
}

f_gctnbp() {
	git branch $1
	git reset --hard HEAD~1
	git checkout $1
	git push -u origin $1
}

f_grcp() {
	git reset --hard HEAD
	git clean -f
	git pull
}

